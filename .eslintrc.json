{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "import/prefer-default-export": [
            "off"
        ],
        "consistent-return": [
            "off"
        ],
        "no-console": [
            "off"
        ],
        "import/extensions": [
            "off"
        ],
        "no-plusplus": [
            "off"
        ],
        "no-await-in-loop": [
            "off"
        ],
        "no-restricted-syntax": [
            "off"
        ]
    }
}
